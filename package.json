{
  "name": "the-manager",
  "version": "1.0.0",
  "description": "Modern Rewards Platform - Watch videos, earn coins, redeem discounts",
  "scripts": {
    "build": "echo 'Starting build...' && npm install",
    "install": "echo 'Installing dependencies...' && npm ci",
    "postinstall": "echo 'Post-install running...' && ls -la",
    "start": "cd backend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev", 
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "rewards",
    "platform",
    "coins",
    "videos",
    "admin"
  ],
  "author": "The MANAGER Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
